<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Lista_palabras">

    <TextView
        android:id="@+id/prueba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione las palabras que desee"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:gravity="center_horizontal">

    </TextView>
    <ListView
        android:id="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp">

    </ListView>
    <Button
        android:id="@+id/bcomenzar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Comenzar"
        android:background="@drawable/radiusborder"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="222dp"/>

    <TextView
        android:id="@+id/tiempo_muestra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="53dp"
        android:text="00:00"
        android:textSize="30dp"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/texto_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="138dp"
        android:layout_marginRight="138dp"
        android:layout_marginBottom="74dp"
        android:hint="Segundos"
        android:inputType="number" />

    <TextView
        android:layout_width="159dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="468dp"
        android:layout_marginLeft="468dp"
        android:layout_marginBottom="127dp"
        android:text="Ingresar los segundos que habra entre cada palabra"/>

    <Button
        android:id="@+id/set_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:layout_marginBottom="17dp"
        android:text="Establecer"
        android:visibility="invisible"/>


</RelativeLayout>