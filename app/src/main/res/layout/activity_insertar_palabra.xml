<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity_insertarPalabra">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INSERTAR PALABRA"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="25dp">

    </TextView>


    <EditText
        android:id="@+id/etpalabra"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="91dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold">

    </EditText>

    <Button
        android:id="@+id/binsertar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="328dp"
        android:background="#ffffff"
        android:text="INSERTAR"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold">

    </Button>

    <Button
        android:id="@+id/boton_grabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="199dp"
        android:layout_marginLeft="199dp"
        android:layout_marginTop="166dp"
        android:text="Grabar"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="49dp" />

    <Button
        android:id="@+id/boton_detenerg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="400dp"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="163dp"
        android:text="Detener Grabacion"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="49dp" />

    <Button
        android:id="@+id/boton_reproducir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="196dp"
        android:layout_marginLeft="196dp"
        android:layout_marginTop="252dp"
        android:text="Reproducir"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="49dp" />

    <Button
        android:id="@+id/boton_detenerr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="384dp"
        android:layout_marginLeft="384dp"
        android:layout_marginTop="255dp"
        android:text="Detener Reproduccion"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="49dp" />

</RelativeLayout>